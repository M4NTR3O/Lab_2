<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/LabelText"
        android:layout_width="299dp"
        android:layout_height="0dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="58dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/sum_of_inverse_odd_factorials"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/input_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/condition"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="464dp"
        android:text="@string/stop_condition"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LabelText" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="178dp"
        android:layout_height="53dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="457dp"
        android:ems="10"
        android:hint="Enter a restriction"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toEndOf="@+id/condition"
        app:layout_constraintTop_toBottomOf="@+id/LabelText" />
</androidx.constraintlayout.widget.ConstraintLayout>